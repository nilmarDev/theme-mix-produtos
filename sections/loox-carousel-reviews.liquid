<div 
	id="looxCarousel" 
	data-show-more="{{section.settings.show_more}}" 
	data-max-width="{{section.settings.max_width}}"
	data-arrows-color="{{section.settings.arrows_color}}"
	data-dots-color="{{section.settings.dots_color}}"
	data-button-color="{{section.settings.button_color}}"
></div>
{% schema %}
{
	"name": "Reviews - Carousel",
	"class": "index-section",
	"settings": [
		{
			"type": "range",
			"id": "max_width",
			"min": 480,
			"max": 1920,
			"step": 40,
			"unit": "px",
			"label": "Maximum width",
			"default": 1920
		},
		{
			"id": "arrows_color",
			"type": "color",
			"label": "Arrows color"
		},
		{
			"id": "dots_color",
			"type": "color",
			"label": "Dots color"
		},
		{
			"id": "show_more",
			"type": "checkbox",
			"label": "Display \"Show more\" button",
			"default": true
		},
		{
			"id": "button_color",
			"type": "color",
			"label": "Button color"
		}
	],
	"presets": [{
		"name": "Reviews - Carousel",
		"category": "Loox"
	}]
}
{% endschema %}